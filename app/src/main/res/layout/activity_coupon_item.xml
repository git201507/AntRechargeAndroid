<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/white">

    <LinearLayout android:id="@+id/financial_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

        <TextView android:id="@+id/financial_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/shape_ring_red"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_12"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginRight="5dp"/>

        <TextView android:id="@+id/financial_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>


    <TextView android:id="@+id/financial_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/financial_title_layout"
        android:text="title"
        android:textColor="@color/black_overlay"
        android:layout_marginLeft="46px"
        android:textSize="@dimen/sp_14"/>

    <TextView android:id="@+id/financial_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/red"
        android:text="title"/>

</RelativeLayout>