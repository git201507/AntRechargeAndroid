<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/m_money_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bugy_money"
            android:padding="5dp"/>

        <EditText android:id="@+id/m_money"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:inputType="numberDecimal"
            android:background="@drawable/shape_rectangle_rounded_stroke_gray"
            android:textCursorDrawable="@drawable/cursor_red"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/pre_money"
                android:layout_centerVertical="true"/>

            <TextView android:id="@+id/m_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/red"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pre_extra_money"
                    android:layout_gravity="center_vertical"/>

                <ImageView android:id="@+id/account_pay"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/wenhao"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical">
                </ImageView>
            </LinearLayout>


            <TextView android:id="@+id/m_pre2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/red"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView android:id="@+id/m_sur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/red"/>
</LinearLayout>