<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp">

    <ImageView android:id="@+id/message_right_icon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="10dp"
        android:layout_height="18dp"
        android:src="@drawable/right_icon"
        android:scaleType="fitCenter">
    </ImageView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/message_right_icon"
        android:layout_centerVertical="true"
        android:orientation="vertical">


        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <ImageView android:id="@+id/message_title_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:src="@drawable/message2"/>

            <TextView android:id="@+id/message_title"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_color"/>
        </LinearLayout>

        <TextView android:id="@+id/message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hint_color"/>

        <TextView android:id="@+id/message_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_overlay"
            android:maxLines="1" android:ellipsize="end"/>

    </LinearLayout>
</RelativeLayout>