<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|"
    android:orientation="vertical"
    android:background="@color/main_color">

    <include layout="@layout/toolbar" />

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView android:id="@+id/recharge_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/recharge_money"
                android:textSize="@dimen/sp_18"
                android:layout_margin="30px"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText android:id="@+id/recharge_money_value"
                android:layout_width="fill_parent"
                android:layout_height="100px"
                android:background="@drawable/shape_rectangle_rounded_stroke_gray"
                android:textCursorDrawable="@drawable/cursor_red"
                android:hint="@string/recharge_hint_money"
                android:maxLength="13"
                android:inputType="numberDecimal"
                android:textColorHint="@color/hint_color"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/main_text_color"
                android:paddingLeft="10px"
                android:layout_marginRight="24px"
                android:layout_marginLeft="24px"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView android:id="@+id/recharge_zj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_18"
                android:text="@string/recharge_zj"
                android:paddingBottom="2px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60px">

            <TextView android:id="@+id/zj"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_18"
                android:paddingLeft="10px"
                android:layout_marginRight="24px"
                android:layout_marginLeft="24px"
                android:layout_marginBottom="30px"
                android:background="@drawable/shape_rectangle_rounded_stroke_gray"
                android:textColor="@color/main_text_color"/>
        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/sign_in_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="150px"
        android:text="@string/recharge_confirm"
        android:textSize="@dimen/sp_20"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_rectangle_rounded_red"
        android:onClick="onClick"/>
</LinearLayout>
