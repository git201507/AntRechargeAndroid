<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingLeft="@dimen/dp_24px"
            android:paddingRight="@dimen/dp_24px"
            android:layout_marginTop="@dimen/dp_50px"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_130px">

                <ImageView android:id="@+id/icon1"
                    android:layout_alignParentLeft="true"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/pack"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical">
                </ImageView>


                <TextView android:id="@+id/p_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/icon1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    style="@style/text_normal"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_130px">


                <ImageView android:id="@+id/ant_salary_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/lock"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical">
                </ImageView>


                <TextView android:id="@+id/p_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ant_salary_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    style="@style/text_normal"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_130px">


                <ImageView android:id="@+id/icon2"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/speach"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical">
                </ImageView>


                <TextView android:id="@+id/upload"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/icon2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:hint="点击上传汇票信息"
                    style="@style/text_normal"/>
            </RelativeLayout>

        </LinearLayout>


        <ImageView android:id="@+id/piaoyang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24px"
            android:layout_marginRight="@dimen/dp_24px"
            android:layout_marginBottom="@dimen/dp_50px"
            android:layout_marginTop="@dimen/dp_50px"
            android:src="@drawable/piaoyang"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/action_submit"
                style="?android:textAppearanceSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:text="@string/action_submit"
                android:textSize="@dimen/sp_20"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_rectangle_rounded_red"/>

            <Button
                android:id="@+id/action_cancel"
                style="?android:textAppearanceSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:text="@string/action_cancel"
                android:textSize="@dimen/sp_20"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_rectangle_rounded_orange"/>


        </LinearLayout>



    </LinearLayout>
</ScrollView>