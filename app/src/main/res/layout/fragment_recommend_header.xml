<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recommendRadioTab"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:checkedButton="@+id/recommend_r2"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/red">


    <RelativeLayout android:id="@+id/recommend_r1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/selector_color_white">

        <ImageView android:id="@+id/recommend_radio_img1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            style="@style/recommend_number_style"
            android:src="@drawable/lhxg"/>

        <TextView android:id="@+id/recommend_radio_tv1"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:text="@string/recommend_radio_1"/>
    </RelativeLayout>


    <RelativeLayout android:id="@+id/recommend_r2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/selector_color_white"
        android:layout_marginBottom="0px">

        <ImageView android:id="@+id/recommend_radio_img2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            style="@style/recommend_number_style"
            android:src="@drawable/czyh"/>

        <TextView android:id="@+id/recommend_radio_tv2"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:text="@string/recommend_radio_2"/>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/recommend_r3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/selector_color_white">

        <ImageView android:id="@+id/recommend_radio_img3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            style="@style/recommend_number_style"
            android:src="@drawable/grzx"/>

        <TextView android:id="@+id/recommend_radio_tv3"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:text="@string/recommend_radio_3"/>

    </RelativeLayout>

</LinearLayout>