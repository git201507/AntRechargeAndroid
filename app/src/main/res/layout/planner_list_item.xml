<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_24px"
    android:background="@color/color_ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/planner_item_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/text_normal"
                android:textColor="@color/color_ffffff"
                android:paddingLeft="@dimen/dp_24px"
                android:paddingRight="@dimen/dp_24px"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/shape_rectangle_rounded_red"
                android:text="选她"/>


            <TextView android:id="@+id/planner_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/text_normal"
                android:text="金牌理财师  亡羊"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_b2b2b2"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView android:id="@+id/planner_item_icon"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:src="@drawable/touxiang1"
                android:scaleType="centerInside"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/planner_item_icon"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_24px">

                <TextView android:id="@+id/planner_item_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_normal"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="职称信息：蚂蚁宜票高级理财顾问"/>

                <TextView android:id="@+id/planner_item_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_normal"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="职称信息：蚂蚁宜票高级理财顾问"/>

                <TextView android:id="@+id/planner_item_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_normal"
                    android:maxLines="5"
                    android:ellipsize="end"
                    android:text="职称信息：蚂蚁宜票高级理财顾问"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


    <ImageView android:id="@+id/planner_item_mark"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_planner"
        android:scaleType="centerInside"

        />

</RelativeLayout>