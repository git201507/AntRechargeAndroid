<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_24px">


    <TextView android:id="@+id/planner_salary_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_ring_red"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_12"
        android:gravity="center"
        android:layout_marginRight="@dimen/dp_24px"
        />


    <TextView android:id="@+id/planner_salary_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/planner_salary_icon"
        style="@style/text_normal"
        android:text="姓名"
        android:layout_marginRight="@dimen/dp_24px"
        />

    <TextView android:id="@+id/planner_salary_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/planner_salary_1"
        style="@style/text_normal"
        android:gravity="bottom"
        android:textSize="@dimen/sp_14"
        android:text="姓名"/>

    <TextView android:id="@+id/planner_salary_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/planner_salary_icon"
        android:layout_below="@+id/planner_salary_1"
        style="@style/text_normal"
        android:text="姓名"
        android:textSize="@dimen/sp_14"
        android:layout_marginRight="@dimen/dp_24px"
        />

    <TextView android:id="@+id/planner_salary_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        style="@style/text_normal"
        android:textColor="@color/color_e31c1b"
        android:text="姓名1"/>

    <TextView android:id="@+id/planner_salary_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/planner_salary_4"
        style="@style/text_normal"
        android:text="姓名2"
        android:textSize="@dimen/sp_14"/>
</RelativeLayout>